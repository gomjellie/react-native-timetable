{
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"]
    },
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES2015",
    "lib": ["ESNext"],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "noErrorTruncation": true,
    "declaration": true,
    "typeRoots": ["./src/types"]
  },
  "include": ["components/", "index.ts", "package.json"],
  "exclude": [".eslintrc.js"]
}
